@model Models.Models.Gebied

@{
    ViewBag.Title = "Map";
    Layout = "~/Views/Shared/Teller_Layout.cshtml";
}

<h2></h2>

<div>
    <h4>Gebied</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>
    </dl>
    <style>
       /* Always set the map height explicitly to define the size of the div
        * element that contains the map. */
             #map {
                 height: 750px;
                 width: auto;
             }
             /* Optional: Makes the sample page fill the window. */
             html, body {
                 height: 100%;
                 margin: 0;
                 padding: 0;
             }
    </style>

    <div class="row">
        <div id="map"></div>
        <script>
      var map;
      function initMap() {
          map = new google.maps.Map(document.getElementById('map'), {
              center: { lat: @Model.X, lng: @Model.Y },
              zoom: 18
        });
      }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAFgGEZE01x1CuwFW_H-KNplfqSw2gbX_4&center=x,y&zoom=zoom&callback=initMap"
                async defer>
        </script>
    </div>
</div>
